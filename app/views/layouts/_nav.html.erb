<div class="navbar">
  <div class="navbar-inner">
    <%= link_to 'What, Really?', root_path, id: "logo" %>
    <nav>
      <ul class="nav pull-right">
        <li><%= link_to "All Facts", facts_path %></li>
        <li><%= link_to "Add New Fact", new_fact_path if user_signed_in? %></li>
        <% if user_signed_in? %>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
          <li><%= link_to (image_tag(current_user.gravatar_url)), edit_user_registration_path %></li>
        <% else %>
          <li><%= link_to "Sign up", new_user_registration_path %></li>
          <li><%= link_to "Login", new_user_session_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</div>