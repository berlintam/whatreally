<%= simple_form_for(@fact) do |f| %>
  <%= f.input :title, label: false, placeholder: 'title', input_html: { class: "form-wide"} %>
  <%= f.input :description, label: false, placeholder: 'description', input_html: { class: 'form-height'} %>

  <%= f.simple_fields_for :references do |reference_fields| %>

    <div class="fields">
      <%= reference_fields.input :ref, label: false, placeholder: 'reference', input_html: { class: 'form-wide'} %><br>
      <%= reference_fields.hidden_field :_destroy %>
      <%= link_to_function 'remove', 'remove_fields(this)' %>
    </div>
  <% end %>

  <%= f.button :submit %>
<% end %>
