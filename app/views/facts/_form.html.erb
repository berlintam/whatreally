<%= simple_form_for(@fact) do |f| %>

  <%= f.input :title, label: false, placeholder: 'title' %>
  <%= f.input :description, label: false, placeholder: 'description' %>

  <%= f.simple_fields_for :references do |reference_fields| %>
    <%= reference_fields.input :ref, label: false, placeholder: 'reference' %><br>
  <% end %>

  <%= f.button :submit %>
<% end %>
